<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="searchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:minHeight">@dimen/edit_text_small_size</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:background">@drawable/search_bar_drawable</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_8</item>
        <item name="android:drawableLeft">@drawable/ic_search_icon</item>
        <item name="android:drawablePadding">@dimen/margin_medium</item>
        <item name="android:textColorHint">@color/secondary_tab_indicator_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">@integer/max_length_1</item>
    </style>

</resources>
